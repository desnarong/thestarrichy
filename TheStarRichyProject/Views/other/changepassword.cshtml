@{
    ViewData["Title"] = "เปลี่ยนรหัสผ่าน";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12 col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 data-key="t-change-password">เปลี่ยนรหัสผ่าน</h4>
            </div>
            <div class="card-block p-3">
                <div class="form-group row mb-3">
                    <label class="col-lg-2 col-md-4 col-form-label" data-key="t-old-password">รหัสผ่านเก่า :</label>
                    <div class="col-lg-4 col-md-6">
                        <input type="password" class="form-control" value="" />
                    </div>
                </div>
                <div class="form-group row mb-3">
                    <label class="col-lg-2 col-md-4 col-form-label" data-key="t-new-password">รหัสผ่านใหม่ :</label>
                    <div class="col-lg-4 col-md-6">
                        <input type="password" class="form-control" value="" />
                    </div>
                </div>
                <div class="form-group row mb-3">
                    <label class="col-lg-2 col-md-4 col-form-label" data-key="t-confirm-new-password">ยืนยันรหัสผ่านใหม่ :</label>
                    <div class="col-lg-4 col-md-6">
                        <input type="password" class="form-control" value="" />
                    </div>
                </div>
                <div class="form-group row mb-3 text-end">
                    <div class="col-lg-12">
                        <button class="btn btn-primary me-2" data-key="t-save">บันทึก</button>
                        <button class="btn btn-danger" data-key="t-cancel">ยกเลิก</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <!-- App js -->
    <script src="~/assets/js/app.js"></script>
}