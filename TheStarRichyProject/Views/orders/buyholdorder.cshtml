@{
    ViewData["Title"] = "สั่งซื้อสินค้า";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12 col-lg-12">
        <div class="card">
            <div class="card-header text-center">
                <h4 data-key="t-order-product-hold-online">สั่งซื้อสินค้าแบบถือครองออนไลน์</h4>
            </div>
            <div class="card-block p-3">
                <div class="row">
                    <div class="col-lg-12 col-md-12">
                        <div class="form-group row mb-3">
                            <label class="col-lg-1 col-md-4 col-form-label" data-key="t-member-code">รหัสสมาชิก :</label>
                            <div class="col-lg-2 col-md-6">
                                <input type="text" class="form-control" value="" />
                            </div>
                            <div class="col-md-2 mt-1">
                                <button class="btn btn-primary" data-key="t-search">ค้นหา</button>
                            </div>
                        </div>
                        <div class="form-group row mb-3">
                            <label class="col-lg-1 col-md-4 col-form-label" data-key="t-code">รหัส :</label>
                            <div class="col-lg-2 col-md-6">
                                <input type="text" class="form-control" value="" disabled />
                            </div>
                            <div class="col-lg-2 col-md-6"></div>
                            <label class="col-lg-1 col-md-4 col-form-label" data-key="t-registration-date">วันที่สมัคร :</label>
                            <div class="col-lg-2 col-md-6">
                                <input type="text" class="form-control" value="" disabled />
                            </div>
                        </div>
                        <div class="form-group row mb-3">
                            <label class="col-lg-1 col-md-4 col-form-label" data-key="t-name">ชื่อ :</label>
                            <div class="col-lg-4 col-md-6">
                                <input type="text" class="form-control" value="" disabled />
                            </div>
                            <label class="col-lg-1 col-md-4 col-form-label" data-key="t-expiration-date">วันหมดอายุ :</label>
                            <div class="col-lg-2 col-md-6">
                                <input type="text" class="form-control" value="" disabled />
                            </div>
                        </div>
                        <div class="form-group row mb-3">
                            <label class="col-lg-1 col-md-4 col-form-label"></label>
                            <div class="col-md-1">
                                <button class="btn btn-primary" data-key="t-transfer">โอน</button>
                            </div>
                            <div class="col-md-1">
                                <button class="btn btn-primary" data-key="t-cancel">ยกเลิก</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card">
            <div class="card-block p-3">
                <div class="form-group row mb-3">
                    <label class="col-lg-1 col-md-4 col-form-label" data-key="t-purchase-type">ประเภทการสั่งซื้อ :</label>
                    <div class="col-lg-1 col-md-6">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="purchase_type" id="hold" value="" checked>
                            <label class="form-check-label" for="hold" data-key="t-hold">ถือครอง</label>
                        </div>
                    </div>
                    <label class="col-lg-1 col-md-4 col-form-label" data-key="t-expiration-date">วันหมดอายุ :</label>
                    <div class="col-lg-2 col-md-6">
                        <input type="text" class="form-control" value="" disabled />
                    </div>
                </div>
                <div class="form-group row mb-3">
                    <label class="col-lg-1 col-md-4 col-form-label" data-key="t-payment">การชำระเงิน :</label>
                    <div class="col-lg-1 col-md-6">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="payment_method" id="transfer_money" value="" checked>
                            <label class="form-check-label" for="transfer_money" data-key="t-transfer-money">โอนเงิน</label>
                        </div>
                    </div>
                    <label class="col-lg-1 col-md-4 col-form-label" data-key="t-bank-transfer">ธนาคารที่โอน :</label>
                    <div class="col-lg-2 col-md-6">
                        <select class="form-control">
                            <option value="0" title="เลือก">เลือก</option>
                        </select>
                    </div>
                    <label class="col-lg-1 col-md-4 col-form-label" data-key="t-account-number">เลขที่บัญชี :</label>
                    <div class="col-lg-2 col-md-6">
                        <input type="text" class="form-control" value="" disabled />
                    </div>
                </div>
                <div class="form-group row mb-3">
                    <label class="col-lg-1 col-md-4 col-form-label" data-key="t-shipping">การจัดส่ง :</label>
                    <div class="col-lg-7 col-md-6">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="shipping_method" id="arrange_delivery" value="" checked>
                            <label class="form-check-label" for="arrange_delivery" data-key="t-arrange-delivery">จัดส่ง</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="shipping_method" id="pick_up_branch" value="">
                            <label class="form-check-label" for="pick_up_branch" data-key="t-pick-up-branch">รับที่สาขา</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <select class="form-control"></select>
                        </div>
                    </div>
                </div>
                <div class="form-group row mb-3">
                    <label class="col-lg-1 col-md-4 col-form-label" data-key="t-shipping-of-goods">ที่อยู่จัดส่ง :</label>
                    <div class="col-lg-6 col-md-6">
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="shipping_address" id="member_address" value="" checked>
                            <label class="form-check-label" for="member_address" data-key="t-ship-to-member-address">ที่อยู่สมาชิก</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="shipping_address" id="card_address" value="">
                            <label class="form-check-label" for="card_address" data-key="t-ship-to-card-address">ที่อยู่ตามบัตร</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" type="radio" name="shipping_address" id="branch_address" value="">
                            <label class="form-check-label" for="branch_address" data-key="t-branch-address">ที่อยู่สาขา</label>
                        </div>
                    </div>
                </div>
                <div class="form-group row mb-3">
                    <label class="col-lg-1 col-md-4 col-form-label" data-key="t-previous-shipping-address">ที่อยู่จัดส่งก่อนหน้า :</label>
                    <div class="col-lg-3 col-md-6">
                        <select class="form-control"></select>
                    </div>
                    <div class="col-md-1">
                        <button class="btn btn-primary" data-key="t-select">เลือก</button>
                    </div>
                </div>
                <div class="form-group row mb-3">
                    <label class="col-lg-1 col-md-4 col-form-label" data-key="t-product-code">รหัสสินค้า :</label>
                    <div class="col-lg-2 col-md-6">
                        <input type="text" class="form-control" value="" />
                    </div>
                    <label class="col-lg-1 col-md-4 col-form-label" data-key="t-product-name">ชื่อสินค้า :</label>
                    <div class="col-lg-3 col-md-6">
                        <input type="text" class="form-control" value="" />
                    </div>
                    <label class="col-lg-1 col-md-4 col-form-label" data-key="t-quantity">จำนวน :</label>
                    <div class="col-lg-1 col-md-6">
                        <input type="text" class="form-control" value="" />
                    </div>
                    <div class="col-md-1">
                        <button class="btn btn-primary" data-key="t-search">ค้นหา</button>
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12 col-md-12">
                        <div class="table-responsive mt-3">
                            <table id="data-table-responsive" class="table table-striped table-bordered"></table>
                        </div>
                    </div>
                </div>
                <div class="form-group row mt-3">
                    <label class="col-lg-1 col-md-4 col-form-label" data-key="t-total-amount">ยอดรวม :</label>
                    <div class="col-lg-2 col-md-6">
                        <input type="text" class="form-control" value="" />
                    </div>
                </div>
                <div class="form-group row mt-3">
                    <label class="col-lg-1 col-md-4 col-form-label" data-key="t-discount">ส่วนลด :</label>
                    <div class="col-lg-2 col-md-6">
                        <input type="text" class="form-control" value="" />
                    </div>
                </div>
                <div class="form-group row mt-3">
                    <label class="col-lg-1 col-md-4 col-form-label" data-key="t-shipping-cost">ค่าส่ง :</label>
                    <div class="col-lg-2 col-md-6">
                        <input type="text" class="form-control" value="" />
                    </div>
                </div>
                <div class="form-group row mt-3">
                    <label class="col-lg-1 col-md-4 col-form-label" data-key="t-net-amount">ยอดสุทธิ :</label>
                    <div class="col-lg-2 col-md-6">
                        <input type="text" class="form-control" value="" />
                    </div>
                </div>
                <div class="form-group row mt-3">
                    <label class="col-lg-1 col-md-4 col-form-label" data-key="t-total-pv">PV รวม :</label>
                    <div class="col-lg-2 col-md-6">
                        <input type="text" class="form-control" value="" />
                    </div>
                </div>
                <div class="form-group row mb-3">
                    <label class="col-lg-1 col-md-4 col-form-label" data-key="t-payment-slip-1">สลิปชำระเงิน 1 :</label>
                    <div class="col-lg-2 col-md-6">
                        <input type="file" class="form-control" value="" />
                    </div>
                    <div class="col-lg-2 col-md-6">
                        <input type="text" class="form-control" value="" disabled />
                    </div>
                </div>
                <div class="form-group row mb-3">
                    <label class="col-lg-1 col-md-4 col-form-label" data-key="t-payment-slip-2">สลิปชำระเงิน 2 :</label>
                    <div class="col-lg-2 col-md-6">
                        <input type="file" class="form-control" value="" />
                    </div>
                    <div class="col-lg-2 col-md-6">
                        <input type="text" class="form-control" value="" disabled />
                    </div>
                </div>
                <div class="form-group row mb-3">
                    <label class="col-lg-1 col-md-4 col-form-label" data-key="t-payment-slip-3">สลิปชำระเงิน 3 :</label>
                    <div class="col-lg-2 col-md-6">
                        <input type="file" class="form-control" value="" />
                    </div>
                    <div class="col-lg-2 col-md-6">
                        <input type="text" class="form-control" value="" disabled />
                    </div>
                </div>
                <div class="form-group row mb-3">
                    <label class="col-lg-1 col-md-4 col-form-label" data-key="t-payment-slip-4">สลิปชำระเงิน 4 :</label>
                    <div class="col-lg-2 col-md-6">
                        <input type="file" class="form-control" value="" />
                    </div>
                    <div class="col-lg-2 col-md-6">
                        <input type="text" class="form-control" value="" disabled />
                    </div>
                </div>
                <div class="form-group row mb-3">
                    <label class="col-lg-1 col-md-4 col-form-label" data-key="t-payment-slip-5">สลิปชำระเงิน 5 :</label>
                    <div class="col-lg-2 col-md-6">
                        <input type="file" class="form-control" value="" />
                    </div>
                    <div class="col-lg-2 col-md-6">
                        <input type="text" class="form-control" value="" disabled />
                    </div>
                </div>
                <div class="form-group row mt-3 text-end">
                    <div class="col-lg-5 col-md-12">
                        <button class="btn btn-primary me-2" data-key="t-save">บันทึก</button>
                        <button class="btn btn-primary me-2" data-key="t-cancel">ยกเลิก</button>
                        <button class="btn btn-primary" data-key="t-save-new-item">บันทึกรายการใหม่</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $("#data-table-responsive").DataTable({
            "responsive": true,
            "processing": true,
            "serverSide": false,
            "filter": false,
            "orderMulti": false,
            "ordering": true,
            "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "All"]],
            "pageLength": 25,
            "destroy": true,
            "searching": false,
            "contentType": "application/json; charset=utf-8",
            "columns": [
                { title: "รหัสสินค้า", "data": '', "targets": 0, "orderable": true, "data-key": "t-product-code" },
                { title: "ชื่อสินค้า", "data": '', "data-key": "t-product-name" },
                { title: "ราคาขาย", "data": '', "data-key": "t-selling-price" },
                { title: "จำนวน PV", "data": '', "data-key": "t-quantity-of-pv" },
                { title: "จำนวน", "data": '', "data-key": "t-quantity" },
                { title: "ยอดรวม", "data": '', "data-key": "t-total-amount" },
                { title: "PV รวม", "data": '', "data-key": "t-total-pv" },
                { title: "รูปสินค้า", "data": '', "data-key": "t-product-image" }
            ],
        });
    });
</script>

@section scripts{
    <!-- App js -->
    <script src="~/assets/js/app.js"></script>
}