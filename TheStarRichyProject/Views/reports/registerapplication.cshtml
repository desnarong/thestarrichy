@{
    ViewData["Title"] = "ลงทะเบียนใบสมัคร";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12 col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 data-key="t-register-application">ลงทะเบียนใบสมัคร</h4>
            </div>
            <div class="card-block p-3">
                <!-- ข้อมูลใบสมัคร -->
                <div class="mb-4">
                    <h5 data-key="t-application-info">ข้อมูลใบสมัคร</h5>
                    <div class="form-group row mb-3">
                        <label class="col-lg-2 col-md-4 col-form-label" data-key="t-application-code">รหัสใบสมัคร :</label>
                        <div class="col-lg-4 col-md-6">
                            <input type="text" class="form-control" value="" />
                        </div>
                        <div class="col-md-2">
                            <button class="btn btn-primary" data-key="t-search">ค้นหา</button>
                        </div>
                    </div>
                    <div class="form-group row mb-3">
                        <label class="col-lg-2 col-md-4 col-form-label" data-key="t-name">ชื่อ :</label>
                        <div class="col-lg-4 col-md-6">
                            <input type="text" class="form-control" value="" disabled />
                        </div>
                        <label class="col-lg-2 col-md-4 col-form-label" data-key="t-application-date">วันที่สมัคร :</label>
                        <div class="col-lg-4 col-md-6">
                            <input type="text" class="form-control" value="" disabled />
                        </div>
                    </div>
                    <div class="form-group row mb-3">
                        <label class="col-lg-2 col-md-4 col-form-label" data-key="t-application-type">ประเภทใบสมัคร :</label>
                        <div class="col-lg-10 col-md-6">
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="application_type" id="individual" value="" checked>
                                <label class="form-check-label" for="individual" data-key="t-individual">บุคคล</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="application_type" id="legal_entity" value="">
                                <label class="form-check-label" for="legal_entity" data-key="t-legal-entity">นิติบุคคล</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row mb-3 text-end">
                        <div class="col-lg-12">
                            <button class="btn btn-primary me-2" data-key="t-save">บันทึก</button>
                            <button class="btn btn-danger" data-key="t-cancel">ยกเลิก</button>
                        </div>
                    </div>
                </div>

                <!-- ประวัติใบสมัคร -->
                <div>
                    <h5 data-key="t-application-history">ประวัติใบสมัคร</h5>
                    <div class="table-responsive mt-3">
                        <table id="data-table-responsive" class="table table-striped table-bordered"></table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $("#data-table-responsive").DataTable({
            "responsive": true,
            "processing": true,
            "serverSide": false,
            "filter": false,
            "orderMulti": false,
            "ordering": true,
            "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "ทั้งหมด"]],
            "pageLength": 25,
            "destroy": true,
            "searching": false,
            "contentType": "application/json; charset=utf-8",
            "columns": [
                { title: "รหัสใบสมัคร", "data": '', "targets": 0, "orderable": true, "data-key": "t-application-code" },
                { title: "วันที่สมัคร", "data": '', "data-key": "t-application-date" },
                { title: "ชื่อ", "data": '', "data-key": "t-name" },
                { title: "ประเภทใบสมัคร", "data": '', "data-key": "t-application-type" },
                { title: "สถานะ", "data": '', "data-key": "t-status" },
                { title: "ดูรายละเอียด", "data": '', "data-key": "t-view-details" }
            ],
        });
    });
</script>

@section scripts{
    <!-- App js -->
    <script src="~/assets/js/app.js"></script>
}