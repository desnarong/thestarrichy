@{
    ViewData["Title"] = "รายงานการขาย";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12 col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 data-key="t-daily-sales-report">รายงานยอดขายรายวันสำหรับสมาชิก</h4>
            </div>
            <div class="card-block p-3">
                <!-- ข้อมูลทั่วไป -->
                <div class="mb-4">
                    <h5 data-key="t-general-info">ข้อมูลทั่วไป</h5>
                    <div class="form-group row mb-3">
                        <label class="col-lg-2 col-md-4 col-form-label" data-key="t-center-mobile-code">รหัสศูนย์/โมบาย :</label>
                        <div class="col-lg-4 col-md-6">
                            <input type="text" class="form-control" value="S00000029" disabled />
                        </div>
                        <label class="col-lg-2 col-md-4 col-form-label" data-key="t-amount">ยอดรวม :</label>
                        <div class="col-lg-4 col-md-6">
                            <input type="text" class="form-control" value="0.00" disabled />
                        </div>
                    </div>
                    <div class="form-group row mb-3">
                        <label class="col-lg-2 col-md-4 col-form-label" data-key="t-quantity-of-pv">จำนวน PV :</label>
                        <div class="col-lg-4 col-md-6">
                            <input type="text" class="form-control" value="0.00" disabled />
                        </div>
                    </div>
                    <div class="form-group row mb-3">
                        <label class="col-lg-2 col-md-4 col-form-label" data-key="t-report-type">ประเภทรายงาน :</label>
                        <div class="col-lg-10 col-md-6">
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="report_type" id="view_all" value="" checked>
                                <label class="form-check-label" for="view_all" data-key="t-view-all">ดูทั้งหมด</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="report_type" id="daily" value="">
                                <label class="form-check-label" for="daily" data-key="t-daily">รายวัน</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="report_type" id="weekly" value="">
                                <label class="form-check-label" for="weekly" data-key="t-weekly">รายสัปดาห์</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="report_type" id="monthly" value="">
                                <label class="form-check-label" for="monthly" data-key="t-monthly">รายเดือน</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group row mb-3">
                        <label class="col-lg-2 col-md-4 col-form-label" data-key="t-from-date">จากวันที่ :</label>
                        <div class="col-lg-3 col-md-6">
                            <input type="text" class="form-control" value="" />
                        </div>
                        <label class="col-lg-2 col-md-4 col-form-label" data-key="t-to-date">ถึงวันที่ :</label>
                        <div class="col-lg-3 col-md-6">
                            <input type="text" class="form-control" value="" />
                        </div>
                        <div class="col-md-2">
                            <button class="btn btn-primary" data-key="t-search">ค้นหา</button>
                        </div>
                    </div>
                </div>

                <!-- รายงาน -->
                <div>
                    <h5 data-key="t-report">รายงาน</h5>
                    <div class="table-responsive mt-3">
                        <table id="data-table-responsive" class="table table-striped table-bordered"></table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $("#data-table-responsive").DataTable({
            "responsive": true,
            "processing": true,
            "serverSide": false,
            "filter": false,
            "orderMulti": false,
            "ordering": true,
            "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "ทั้งหมด"]],
            "pageLength": 25,
            "destroy": true,
            "searching": false,
            "contentType": "application/json; charset=utf-8",
            "columns": [
                { title: "เลขที่ใบเสร็จ", "data": '', "targets": 0, "orderable": true, "data-key": "t-receipt-number" },
                { title: "วันที่ใบเสร็จ", "data": '', "data-key": "t-receipt-date" },
                { title: "รหัสสาขา", "data": '', "data-key": "t-branch-code" },
                { title: "รหัสศูนย์", "data": '', "data-key": "t-center-code" },
                { title: "รหัสโมบาย", "data": '', "data-key": "t-mobile-code" },
                { title: "รหัสชุดสต็อก", "data": '', "data-key": "t-stock-kit-code" },
                { title: "รหัสสมาชิก", "data": '', "data-key": "t-member-code" },
                { title: "ชื่อสมาชิก", "data": '', "data-key": "t-member-name" },
                { title: "ประเภทการสั่งซื้อ", "data": '', "data-key": "t-purchase-type" },
                { title: "ยอดรวม", "data": '', "data-key": "t-amount" },
                { title: "PV", "data": '', "data-key": "t-pv" },
                { title: "สถานะใบเสร็จ", "data": '', "data-key": "t-receipt-status" },
                { title: "ดูรายละเอียด", "data": '', "data-key": "t-view-details" }
            ],
        });
    });
</script>

@section scripts{
    <!-- App js -->
    <script src="~/assets/js/app.js"></script>
}