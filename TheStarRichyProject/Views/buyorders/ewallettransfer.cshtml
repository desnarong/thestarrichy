@{
    ViewData["Title"] = "สั่งซื้อสินค้า";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12 col-lg-12">
        <div class="card">
            <div class="card-header">
                <h4 data-key="t-ewallet-transfer">โอนเงิน E-wallet</h4>
            </div>
            <div class="card-block p-3">
                <div class="form-group row mb-3">
                    <label class="col-lg-2 col-md-4 col-form-label" data-key="t-ewallet-transferable-balance">ยอดคงเหลือที่โอนได้ :</label>
                    <div class="col-lg-4 col-md-6">
                        <input type="text" class="form-control" value="0.00" disabled />
                    </div>
                </div>
                <div class="form-group row mb-3">
                    <label class="col-lg-2 col-md-4 col-form-label" data-key="t-receiving-member-code">รหัสสมาชิกผู้รับ :</label>
                    <div class="col-lg-3 col-md-6">
                        <input type="text" class="form-control" value="" />
                    </div>
                    <div class="col-md-2 mt-1">
                        <button class="btn btn-primary" data-key="t-search">ค้นหา</button>
                    </div>
                </div>
                <div class="form-group row mb-3">
                    <label class="col-lg-2 col-md-4 col-form-label" data-key="t-member-name">ชื่อสมาชิก :</label>
                    <div class="col-lg-4 col-md-6">
                        <input type="text" class="form-control" value="" />
                    </div>
                </div>
                <div class="form-group row mb-3">
                    <label class="col-lg-2 col-md-4 col-form-label" data-key="t-amount-to-transfer">จำนวนเงินที่โอน :</label>
                    <div class="col-lg-4 col-md-6">
                        <input type="text" class="form-control" value="" />
                    </div>
                </div>
                <div class="form-group row mb-3 text-end">
                    <div class="col-lg-12">
                        <button class="btn btn-primary me-2" data-key="t-transfer">โอน</button>
                        <button class="btn btn-danger" data-key="t-cancel">ยกเลิก</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <!-- App js -->
    <script src="~/assets/js/app.js"></script>
}